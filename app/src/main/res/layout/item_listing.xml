<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    app:cardCornerRadius="1dp">

    <LinearLayout
        android:id="@+id/card_back"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="130dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/minMargin"
                android:layout_marginLeft="@dimen/minMargin"
                android:layout_marginRight="@dimen/minMargin">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/iconSizeSmall"
                    android:layout_height="@dimen/iconSizeSmall"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/minimum_spacing"
                    android:layout_marginTop="@dimen/minMargin"
                    android:src="@drawable/ic_wait_blue" />

                <TextView
                    android:id="@+id/textView"
                    style="@style/smallBlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/minMargin"
                    android:layout_marginTop="@dimen/minMargin"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3"
                    android:gravity="center_vertical"
                    android:text="Table for 1-2" />

                <TextView
                    android:id="@+id/tvTable2"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/minMargin"
                    android:layout_marginRight="@dimen/minimum_spacing"
                    android:layout_toRightOf="@id/imageView3"
                    android:text="3 people waiting"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/minMargin"
                android:layout_marginLeft="@dimen/minMargin"
                android:layout_marginRight="@dimen/minMargin">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/iconSizeSmall"
                    android:layout_height="@dimen/iconSizeSmall"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/minimum_spacing"
                    android:layout_marginTop="@dimen/minMargin"
                    android:src="@drawable/ic_wait_pink" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/smallBlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/minMargin"
                    android:layout_marginTop="@dimen/minMargin"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView4"
                    android:gravity="center_vertical"
                    android:text="Table for 2-4" />

                <TextView
                    android:id="@+id/tvTable4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_below="@id/textView1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/minMargin"
                    android:layout_marginRight="@dimen/minimum_spacing"
                    android:layout_toRightOf="@id/imageView4"
                    android:text="3 people waiting"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/minMargin"
                android:layout_marginLeft="@dimen/minMargin"
                android:layout_marginRight="@dimen/minMargin">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/iconSizeSmall"
                    android:layout_height="@dimen/iconSizeSmall"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/minimum_spacing"
                    android:layout_marginTop="@dimen/minMargin"
                    android:src="@drawable/ic_wait_green" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/smallBlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/minMargin"
                    android:layout_marginTop="@dimen/minMargin"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_toRightOf="@+id/imageView5"
                    android:gravity="center_vertical"
                    android:text="Table for 5+" />

                <TextView
                    android:id="@+id/tvTable6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/minMargin"
                    android:layout_marginRight="@dimen/minimum_spacing"
                    android:layout_toRightOf="@id/imageView5"
                    android:text="3 people waiting"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>

        </LinearLayout>

        <View style="@style/dividerHStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/minMargin">

            <TextView
                android:id="@+id/tvPriceLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvAddress2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="top"
                android:text="$$$$"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tvRestoName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/minMargin"
                android:layout_toLeftOf="@id/tvPriceLevel"
                android:text="Boulevard"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRestoName2"
                android:layout_marginBottom="@dimen/minMargin"
                android:layout_marginLeft="@dimen/minMargin"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="403 Main Street" />

            <RatingBar
                android:id="@+id/userRatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tvAddress2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/minMargin"
                android:layout_marginTop="@dimen/minMargin"
                android:background="@android:color/transparent"
                android:gravity="left"
                android:numStars="5"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="130dp"
                android:scaleType="centerCrop"
                android:transitionName="transition" />

            <!--LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/viewMargin"
                android:background="@color/colorPrimaryTransparent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_wait" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:text="22 min"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout-->

            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:layout_gravity="right|top"
                android:layout_marginRight="@dimen/viewMargin"
                android:layout_marginTop="@dimen/minMargin"
                android:src="@drawable/ic_like" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/minMargin">

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvAddress"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="top"
                android:text="0.2 mi"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tvRestoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/minMargin"
                android:layout_toLeftOf="@id/tvDistance"
                android:text="Boulevard"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRestoName"
                android:layout_marginBottom="@dimen/minMargin"
                android:layout_marginLeft="@dimen/minMargin"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="403 Main Street" />

            <TextView
                android:id="@+id/tvWaitTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tvAddress"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/minMargin"
                android:background="@android:color/transparent"
                android:gravity="left"
                android:text="22 min"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <!--TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/minMargin"
                android:layout_toLeftOf="@id/tvWaitTime"
                android:text="SOME MORE TEXT "
                android:layout_below="@id/tvAddress" /-->

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
