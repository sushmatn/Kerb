<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.kerbless.kerb.activities.SplashActivity">

    <ImageView
        android:id="@+id/kerbLogo"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/kerb"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFork"
            android:layout_width="50dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_fork" />

        <ImageView
            android:id="@+id/ivPlate"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleX="0"
            android:scaleY="0"
            android:src="@drawable/ic_single_plate" />

        <ImageView
            android:id="@+id/ivKnife"
            android:alpha="0"
            android:layout_width="50dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_knife" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTagline"
        android:alpha="0"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Your wait is over!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/backgroundGray"
        android:textStyle="bold" />


</RelativeLayout>
